@model List<ProductViewModel>
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-lg-4 d-flex align-content-start flex-wrap">
            <div class="card h-auto box-shadow">
                @if (@product.PathsToImages.Count != 0)
                {
                <img class="card-img-top" src="@product.PathsToImages.First() ">
                }
                
                <div class="card-body">
                    <h5>
                        <a style="color:black" href="/product/index/@product.Id">
                            @product.Name
                        </a>
                    </h5>

                    <h5>@product.Cost руб.</h5>
                </div>
                <div class="card-body d-flex align-items-end">
                    <a class="btn btn-primary" href="/basket/add?productId=@product.Id" role="button">Добавить в корзину</a>
                    <a class="btn btn-danger" type="radio" href="/productsCompared/add?productId=@product.Id" role="button">Cравнить</a>
                    <a class="btn btn-success" type="radio" href="/favorites/add?productId=@product.Id" role="button">В избранное</a>
                </div>
            </div>
        </div>
    }
</div>