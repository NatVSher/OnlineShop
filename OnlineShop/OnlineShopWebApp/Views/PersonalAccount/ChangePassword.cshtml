@model ChangePassword
<form method="post">
    <div class="row">
        @await Html.PartialAsync("ProfileLeftMenu")
        <div class="col-md-5">
            <h3 class="text-center">Изменение пароля</h3>
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <input type="hidden" name="UserName" value="@Model.UserName">
            <div>
                <label asp-for="@Model.OldPassword">Старый пароль</label><br />
                <input class="form-control" type="password" size="40" asp-for="@Model.OldPassword" value="" required />
                <span asp-validation-for="@Model.OldPassword"></span>
            </div>
            <div>
                <label asp-for="@Model.NewPassword">Новый пароль</label><br />
                <input class="form-control" type="password" size="40" asp-for="@Model.NewPassword" value="" required />
                <span asp-validation-for="@Model.NewPassword"></span>
            </div>

            <div>
                <label asp-for="@Model.ConfirmPassword">Повторите новый пароль</label><br />
                <input class="form-control" type="password" size="40" asp-for="@Model.ConfirmPassword" value="" required />
                <span asp-validation-for="@Model.ConfirmPassword"></span>
            </div>

            <br />
            <button class="btn btn-primary" type="submit" asp-area="" asp-controller="PersonalAccount" asp-action="ChangePassword">Изменить пароль</button>            
        </div>
    </div>
</form>
