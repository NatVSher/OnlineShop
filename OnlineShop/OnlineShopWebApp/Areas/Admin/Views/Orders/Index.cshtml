@model List<OrderViewModel>
<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")
    <div class="col-9">
        <h3 class="text-danger">  Список заказов  </h3>
        <br />

        @if (Model == null || Model.Count() == 0)
        {
        <h4> Заказов нет </h4>
        }
        else
        {
        <div class="row">
            <div class="col">
                <table class="table table-primary">
                    <thead>
                        <tr>
                            <td>  №  </td>
                            <td>  Сумма  </td>
                            <td>  Статус  </td>
                            <td>  Получатель  </td>
                            <td>  Дата  </td>
                            <td>  Время  </td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>

                        @for (var i = 0; i < Model.Count; i++)
                            {
                        <tr>
                            <td>@(i+1)</td>
                            <td>@Model[i].Cost</td>
                            <td>@Model[i].OrderStatus.GetDisplayName()</td>
                            <td>@Model[i].ContactData.Name</td>
                            <td>@Model[i].DateOrder</td>
                            <td>@Model[i].TimeOrder</td>
                            <td>
                                <a asp-area="admin" asp-controller="orders" asp-action="order" asp-route-orderNumber="@(i+1)" asp-route-orderId="@Model[i].Id">
                                    Подробнее
                                </a>
                            </td>
                        </tr>
                            }
                    </tbody>
                </table>
            </div>
        </div>
        }
    </div>
</div>