@model ProductViewModel

<div class="row">
    <div class="col-md-6 offset-md-3">       

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                @for (int i = 0; i < @Model.PathsToImages.Count; i++)
                {
                    @if (i == 0)
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="@Model.PathsToImages[0]" alt="Cлайд">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src="@Model.PathsToImages[i]" alt="Cлайд">
                        </div>
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="card-body">
            <h5>@Model.Id</h5>
            <h5>@Model.Name</h5>
            <h5>@Model.Cost руб.</h5>
            <p>@Model.Description</p>

            <a class="btn btn-primary" asp-area="admin" asp-controller="products" asp-action="index" role="button">Вернуться</a>
            <div>
                <a class="btn btn-danger" type="radio"
                   asp-area="admin" asp-controller="products" asp-action="EditProduct" asp-route-productId="@Model.Id" role="button">Редактировать</a>
                <a class="btn btn-warning" type="radio"
                   asp-area="admin" asp-controller="products" asp-action="removeProduct" asp-route-productId="@Model.Id" role="button">Удалить</a>
            </div>
        </div>
    </div>
</div>