@model UserViewModel
<form method="post">
    <div class="row">
        <div class="col-md-5">
            <h3 class="text-center">Изменение пароля</h3>
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <input type="hidden" name="Id" value="@Model.Id">
            <input type="hidden" name="Name" value="@Model.Name">
            <div>
                <label asp-for="Password">Новый пароль</label><br />
                <input class="form-control" type="text" size="40" asp-for="Password" value="" required/>
                <span asp-validation-for="Password"></span>
            </div>

            <div>
                <label>Повторите новый пароль</label><br />
                <input type="text" name="repeatNewPassword" value="" required/>
                <span asp-validation-for="Password"></span>
            </div>

            <br />
            <button class="btn btn-primary" type="submit" asp-area="admin" asp-controller="users" asp-action="ChangePassword">Изменить пароль</button>
            <a class="btn btn-primary" type="submit" asp-area="admin" asp-controller="users" asp-action="ViewUser" asp-route-id="@Model.Id" role="button">Вернуться</a>
        </div>
    </div>
</form>
